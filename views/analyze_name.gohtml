<script>
    // ‡∏≠‡∏ô‡∏¥‡πÄ‡∏°‡∏ä‡∏±‡∏ô‡πÄ‡∏•‡∏Ç‡∏ß‡∏¥‡πà‡∏á (‡πÑ‡∏°‡πà‡∏ï‡πâ‡∏≠‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏õ‡∏•‡∏±‡πä‡∏Å‡∏≠‡∏¥‡∏ô)
    function startCountUp(el, target, duration = 1500) {
        let start = 0;
        const increment = target / (duration / 16);
        const timer = setInterval(() => {
            start += increment;
            if (start >= target) {
                el.textContent = target;
                clearInterval(timer);
            } else {
                el.textContent = Math.floor(start);
            }
        }, 16);
    }

    document.addEventListener('alpine:init', () => {
        Alpine.data('analysisComponent', () => ({
            name: '', day: '', loading: false, error: null, results: null,

            // üöÄ [‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç Bug]
            // ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏Å‡∏•‡∏±‡∏ö‡πÑ‡∏õ‡πÉ‡∏ä‡πâ Logic ‡∏ó‡∏µ‡πà‡∏£‡∏ß‡∏°‡∏ó‡∏±‡πâ‡∏á‡∏™‡∏≠‡∏á Array
            get calculatedScores() {
                if (!this.results) return { good: 0, bad: 0, total: 0 };

                let good = 0, bad = 0;

                // üöÄ [‡πÇ‡∏Ñ‡πâ‡∏î‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á]
                // ‡∏£‡∏ß‡∏° Array 2 ‡∏ä‡∏∏‡∏î‡πÄ‡∏Ç‡πâ‡∏≤‡∏î‡πâ‡∏ß‡∏¢‡∏Å‡∏±‡∏ô (‡∏ô‡∏µ‡πà‡∏Ñ‡∏∑‡∏≠‡∏Å‡∏≤‡∏£‡∏ô‡∏±‡∏ö‡∏ã‡πâ‡∏≥‡∏ï‡∏≤‡∏°‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£)
                const all = [
                    ...(this.results.sat_num?.sum_meanings || []),
                    ...(this.results.sha_num?.sum_meanings || [])
                ];

                all.forEach(m => {
                    let p = parseInt(m.pairpoint ?? 0, 10) || 0; // üëà (‡πÉ‡∏ä‡πâ pairpoint)
                    if (p > 0) good += p;
                    else if (p < 0) bad += p;
                });

                return {
                    good: good,
                    bad: Math.abs(bad), // üëà (‡πÉ‡∏ä‡πâ Math.abs ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡∏£‡πâ‡∏≤‡∏¢‡πÄ‡∏õ‡πá‡∏ô‡∏ö‡∏ß‡∏Å)
                    total: good + bad  // üëà (‡∏ô‡∏µ‡πà‡∏Ñ‡∏∑‡∏≠‡∏ú‡∏•‡∏£‡∏ß‡∏°‡∏™‡∏∏‡∏ó‡∏ò‡∏¥)
                };
            },

            get uniqueMeanings() {
                if (!this.results) return [];
                const all = [...(this.results.sat_num?.sum_meanings || []), ...(this.results.sha_num?.sum_meanings || [])];
                const map = new Map();
                all.forEach(m => m.pairnumber && !map.has(m.pairnumber) && map.set(m.pairnumber, m));
                return Array.from(map.values());
            },

            async analyzeName() {
                this.loading = true; this.error = null; this.results = null;
                try {
                    const res = await fetch('/api/v1/satnums/calculate', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ name: this.name, day: this.day })
                    });
                    const data = await res.json();
                    if (!res.ok) throw new Error(data.error || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î');

                    // (‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Å‡∏≤‡∏£‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤)
                    this.results = {
                        ...data,
                        kakis_found: data.kakis_found ?? [],
                        sat_num: data.sat_num ?? { sum_meanings: [] },
                        sha_num: data.sha_num ?? { sum_meanings: [] }
                    };
                } catch (err) {
                    this.error = err.message;
                } finally {
                    this.loading = false;
                }
            },

            // (‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô getPairTypeClass - ‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°)
            getPairTypeClass(pairType) {
                if (!pairType) return 'bg-gray-400 text-white';
                const t = pairType.toString().trim().toUpperCase();
                if (t.includes('D10') || t.includes('‡∏î‡∏µ‡∏°‡∏≤‡∏Å') || t.includes('‡∏î‡∏µ‡∏™‡∏∏‡∏î')) return 'bg-green-600 text-white';
                if (t.includes('D8') || t.includes('‡∏î‡∏µ‡∏õ‡∏≤‡∏ô‡∏Å‡∏•‡∏≤‡∏á')) return 'bg-green-500 text-white';
                if (t.includes('D5') || t.includes('‡∏î‡∏µ‡∏ô‡πâ‡∏≠‡∏¢')) return 'bg-green-400 text-white';
                if (t.includes('R10') || t.includes('‡∏£‡πâ‡∏≤‡∏¢‡∏°‡∏≤‡∏Å') || t.includes('‡∏£‡πâ‡∏≤‡∏¢‡∏™‡∏∏‡∏î')) return 'bg-red-700 text-white';
                if (t.includes('R7') || t.includes('‡∏£‡πâ‡∏≤‡∏¢‡∏õ‡∏≤‡∏ô‡∏Å‡∏•‡∏≤‡∏á')) return 'bg-red-500 text-white';
                if (t.includes('R5') || t.includes('‡∏£‡πâ‡∏≤‡∏¢‡∏ô‡πâ‡∏≠‡∏¢')) return 'bg-red-400 text-white';
                if (t.includes('N') || t.includes('‡∏Å‡∏•‡∏≤‡∏á')) return 'bg-yellow-500 text-black';
                return 'bg-gray-500 text-white';
            }
        }));
    });
</script>