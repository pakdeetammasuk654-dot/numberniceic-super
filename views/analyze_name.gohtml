<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('analysisComponent', () => ({

            // 1. State
            name: '',
            day: '',
            loading: false,
            error: null,
            results: null, // üëà ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÄ‡∏õ‡πá‡∏ô null

            // 2. Getters

            // (calculatedScores)
            get calculatedScores() {
                if (!this.results) return { good: 0, bad: 0, total: 0 };
                let goodScore = 0;
                let badScore = 0;
                const allMeanings = (this.results.sat_num.sum_meanings || [])
                    .concat(this.results.sha_num.sum_meanings || []);
                allMeanings.forEach(meaning => {
                    const point = meaning.pairpoint;
                    if (point) {
                        if (point > 0) goodScore += point;
                        else if (point < 0) badScore += point;
                    }
                });
                return {
                    good: goodScore,
                    bad: badScore,
                    total: goodScore + badScore
                };
            },

            // (uniqueMeanings)
            get uniqueMeanings() {
                if (!this.results) return [];
                const allMeanings = (this.results.sat_num.sum_meanings || [])
                    .concat(this.results.sha_num.sum_meanings || []);
                const uniqueMap = new Map();
                allMeanings.forEach(meaning => {
                    if (meaning.pairnumber && !uniqueMap.has(meaning.pairnumber)) {
                        uniqueMap.set(meaning.pairnumber, meaning);
                    }
                });
                return Array.from(uniqueMap.values());
            },

            // 3. Methods

            // (analyzeName)
            async analyzeName() {
                this.loading = true;
                this.error = null;
                this.results = null; // üëà ‡∏•‡πâ‡∏≤‡∏á‡∏Ñ‡πà‡∏≤‡πÄ‡∏Å‡πà‡∏≤

                try {
                    const response = await fetch('/api/v1/satnums/calculate', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify({
                            name: this.name,
                            day: this.day
                        })
                    });
                    const data = await response.json();
                    if (!response.ok) {
                        if (data.error === 'Day field is required') {
                            throw new Error('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡πÄ‡∏Å‡∏¥‡∏î');
                        }
                        throw new Error(data.error || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡∏à‡∏≤‡∏Å Server');
                    }
                    this.results = data; // üëà [‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç] results ‡∏ñ‡∏π‡∏Å‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏ó‡∏µ‡πà‡∏ô‡∏µ‡πà
                } catch (err) {
                    console.error('Error:', err);
                    this.error = `‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ${err.message}`;
                } finally {
                    this.loading = false;
                }
            },

            // (getPairTypeClass)
            getPairTypeClass(pairType) {
                if (!pairType) return 'bg-gray-200 text-gray-700';
                const pt = pairType.trim().toUpperCase();

                if (pt === 'D10') return 'bg-green-500 text-white';
                if (pt === 'D8')  return 'bg-green-300 text-green-900';
                if (pt === 'D5')  return 'bg-green-100 text-green-800';

                if (pt === 'R10') return 'bg-red-600 text-white';
                if (pt === 'R7')  return 'bg-red-300 text-red-900';
                if (pt === 'R5')  return 'bg-red-100 text-red-800';

                if (pt === 'N') return 'bg-yellow-400 text-white';

                if (pairType.includes('‡∏î‡∏µ')) return 'bg-green-300 text-green-900';
                if (pairType.includes('‡∏£‡πâ‡∏≤‡∏¢')) return 'bg-red-300 text-red-900';
                if (pairType.includes('‡∏Å‡∏•‡∏≤‡∏á')) return 'bg-yellow-400 text-white';

                return 'bg-gray-200 text-gray-700';
            }
        }))
    });
