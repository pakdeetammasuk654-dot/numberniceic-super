            // 2. üöÄ [‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï] ‡∏¢‡∏¥‡∏á Fetch (‡∏™‡πà‡∏á Day ‡πÑ‡∏õ‡∏î‡πâ‡∏ß‡∏¢)
            fetch('/api/v1/satnums/calculate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({
                    name: nameToAnalyze,
                    day: dayToAnalyze   // üëà [‡πÉ‡∏´‡∏°‡πà]
                })
            })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(errData => {
                            // üëà [‡πÉ‡∏´‡∏°‡πà] ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö Error ‡∏ß‡πà‡∏≤ 'Day' ‡∏´‡∏≤‡∏¢‡πÑ‡∏õ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
                            if (errData.error === 'Day field is required') {
                                throw new Error('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡πÄ‡∏Å‡∏¥‡∏î');
                            }
                            throw new Error(errData.error || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡∏à‡∏≤‡∏Å Server');
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    // 3. (‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°)
                    resultMessage.textContent = '';
                    resultMessage.classList.remove('loading');

                    // 3a. (‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°)
                    const satHtml = createResultBox('‡πÄ‡∏•‡∏Ç‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå (SatNum)', data.sat_num, false);
                    // 3b. (‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°)
                    const shaHtml = createResultBox('‡πÄ‡∏•‡∏Ç‡∏û‡∏•‡∏±‡∏á‡πÄ‡∏á‡∏≤ (ShaNum)', data.sha_num, false);
                    resultOutput.innerHTML = satHtml + shaHtml;

                    // 3c. üöÄ [‡πÉ‡∏´‡∏°‡πà] ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏• Kakis
                    const kakisHtml = createKakisBox(data.kakis_found);
                    kakisOutput.innerHTML = kakisHtml;

                })
                .catch(error => {
                    // 4. (‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°)
                    console.error('Error:', error);
                    resultMessage.classList.remove('loading');
                    resultMessage.classList.add('error');
                    resultMessage.textContent = `‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ${error.message}`;
                    resultOutput.innerHTML = '';
                    kakisOutput.innerHTML = ''; // üëà [‡πÉ‡∏´‡∏°‡πà]
                });
        });

        // (‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô createResultBox - ‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°, ‡πÅ‡∏ï‡πà‡πÄ‡∏û‡∏¥‡πà‡∏° isKakis)
        function createResultBox(title, dataSet, isKakis = false) {
            let listItems = '';
            if (dataSet.matched_chars && dataSet.matched_chars.length > 0) {
                dataSet.matched_chars.forEach(char => {
                    listItems += `<li>${char.character} (‡∏Ñ‡πà‡∏≤: ${char.value})</li>`;
                });
            } else {
                listItems = '<li>‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏≠‡∏±‡∏Å‡∏©‡∏£‡∏ó‡∏µ‡πà‡∏ï‡∏£‡∏á‡∏Å‡∏±‡∏ô</li>';
            }

            return `
