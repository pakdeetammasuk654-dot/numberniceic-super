        const resultOutput = document.getElementById('result-output');

        // ... (‡∏™‡πà‡∏ß‡∏ô analyzeForm.addEventListener ... fetch ... .then(data => ... )
        analyzeForm.addEventListener('submit', (event) => {
            event.preventDefault();
            const nameToAnalyze = nameInput.value;

            resultMessage.classList.remove('error');
            resultMessage.classList.add('loading');
            resultMessage.textContent = '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå...';
            resultOutput.innerHTML = '';

            fetch('/api/v1/satnums/calculate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({ name: nameToAnalyze })
            })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(errData => {
                            throw new Error(errData.error || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡∏à‡∏≤‡∏Å Server');
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    resultMessage.textContent = '';
                    resultMessage.classList.remove('loading');

                    const satHtml = createResultBox(
                        '‡πÄ‡∏•‡∏Ç‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå (SatNum)',
                        data.sat_num
                    );

                    const shaHtml = createResultBox(
                        '‡πÄ‡∏•‡∏Ç‡∏û‡∏•‡∏±‡∏á‡πÄ‡∏á‡∏≤ (ShaNum)',
                        data.sha_num
                    );

                    resultOutput.innerHTML = satHtml + shaHtml;
                })
                .catch(error => {
                    console.error('Error:', error);
                    resultMessage.classList.remove('loading');
                    resultMessage.classList.add('error');
                    resultMessage.textContent = `‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ${error.message}`;
                    resultOutput.innerHTML = '';
