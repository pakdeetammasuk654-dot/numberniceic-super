<script>
    document.addEventListener('DOMContentLoaded', () => {
        const analyzeForm = document.getElementById('analyze-form');
        const nameInput = document.getElementById('nameInput');
        const daySelect = document.getElementById('daySelect'); // üëà [‡πÉ‡∏´‡∏°‡πà]

        const resultMessage = document.getElementById('result-message');
        const resultOutput = document.getElementById('result-output');
        const kakisOutput = document.getElementById('kakis-output'); // üëà [‡πÉ‡∏´‡∏°‡πà]

        analyzeForm.addEventListener('submit', (event) => {
            event.preventDefault();
            const nameToAnalyze = nameInput.value;
            const dayToAnalyze = daySelect.value; // üëà [‡πÉ‡∏´‡∏°‡πà]

            // 1. (‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°)
            resultMessage.classList.remove('error');
            resultMessage.classList.add('loading');
